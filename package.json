{
  "name": "ppio_demo",
  "version": "0.1.5",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "postinstall": "electron-builder install-app-deps",
    "test:unit": "vue-cli-service test:unit",
    "inspect-webpack": "cross-env NODE_ENV=production vue-cli-service inspect > webpack.output.js",
    "rebuild": "electron-rebuild",
    "electron:build": "cross-env IS_CPOOL=false vue-cli-service electron:build",
    "electron:serve": "cross-env IS_CPOOL=false vue-cli-service electron:serve",
    "electron:build:cpool": "cross-env IS_CPOOL=true vue-cli-service electron:build",
    "electron:serve:cpool": "cross-env IS_CPOOL=true vue-cli-service electron:serve",
    "electron:build:devposs": "cross-env DEV_POSS=true IS_CPOOL=false vue-cli-service electron:build",
    "electron:serve:devposs": "cross-env DEV_POSS=true IS_CPOOL=false vue-cli-service electron:serve",
    "electron:build:cpool:devposs": "cross-env DEV_POSS=true IS_CPOOL=true vue-cli-service electron:build",
    "electron:serve:cpool:devposs": "cross-env DEV_POSS=true IS_CPOOL=true vue-cli-service electron:serve"
  },
  "main": "background.js",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "dependencies": {
    "archiver": "^3.0.0",
    "axios": "^0.18.0",
    "bignumber.js": "^8.0.1",
    "bip39": "^2.5.0",
    "electron-default-menu": "^1.0.1",
    "electron-updater": "^4.0.4",
    "element-ui": "^2.4.5",
    "filesize": "^3.6.1",
    "localforage": "^1.7.3",
    "lodash.clonedeep": "^4.5.0",
    "lodash.throttle": "^4.1.1",
    "mime-types": "^2.1.21",
    "mkdir-recursive": "^0.4.0",
    "moment": "^2.22.2",
    "portscanner": "^2.2.0",
    "ppio": "^0.1.2",
    "ppwallet": "^0.0.1-alpha4",
    "safe-buffer": "^5.1.2",
    "sanitize.css": "^8.0.0",
    "universal-analytics": "^0.4.20",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.2.1",
    "@vue/cli-plugin-unit-jest": "^3.0.1",
    "@vue/cli-service": "3.4.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.20",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.0.1",
    "babel-plugin-component": "^1.1.1",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "devtron": "^1.4.0",
    "electron": "^3.0.9",
    "electron-builder": "^20.28.4",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "lint-staged": "^7.2.2",
    "node-sass": "^4.9.4",
    "sass-loader": "^7.1.0",
    "vue-cli-plugin-electron-builder": "^1.0.0-rc.4",
    "vue-cli-plugin-element": "^1.0.0",
    "vue-template-compiler": "^2.5.17"
  }
}
